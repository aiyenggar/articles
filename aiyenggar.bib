	Keywords = {behavioral strategy, game theory, experiment, market, competition, performance},
	Number = {12},
	Pages = {2390--2423},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Strategic Intelligence: The Cognitive Capability to Anticipate Competitor Behavior},
	Url = {http://dx.doi.org/10.1002/smj.2660},
