	Keywords = {addition of new alliance partners, alliance network, network cohesion, network embeddedness, network pluralism},
	Number = {1},
	Pages = {217--241},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Do ongoing networks block out new friends? Reconciling the embeddedness constraint dilemma on new alliance partner addition},
	Url = {http://dx.doi.org/10.1002/smj.2695},
	Volume = {39},
	Year = {2018},
