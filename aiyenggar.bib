	Keywords = {interorganizational imitation, mergers and acquisitions, technology related uncertainty, entrepreneurship, technology acquisitions},
	Number = {13},
	Pages = {2647--2665},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Interorganizational Imitation and Acquisitions of High-tech Ventures},
	Url = {http://dx.doi.org/10.1002/smj.2666},
