	Pages = {5--36},
	Publisher = {Academy of Management},
	Title = {Work{\textendash}Life Flexibility for Whom? Occupational Status and Work{\textendash}Life Inequality in Upper, Middle, and Lower Level Jobs},
	Url = {http://annals.aom.org/content/12/1/5},
	Volume = {12},
