	Keywords = {board leadership structure, board of directors, hierarchy, justice, turnover},
	Number = {2},
	Pages = {429--457},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Undervaluation of directors in the board hierarchy: Impact on turnover of directors (and CEOs) in newly public firms},
	Url = {http://dx.doi.org/10.1002/smj.2716},
	Volume = {39},
	Year = {2018},
