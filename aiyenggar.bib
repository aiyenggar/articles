	Number = {1},
	Pages = {440--465},
	Publisher = {Academy of Management},
	Title = {A Pluralistic Perspective to Overcome Major Blind Spots in Research on Interorganizational Relationships},
	Url = {http://annals.aom.org/content/12/1/440},
	Volume = {12},
	Year = {2018},
