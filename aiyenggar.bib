	Journal = {Strategic Management Journal},
	Keywords = {strategy implementation, political environment, middle manager, state-owned enterprise, China},
	Number = {3},
	Pages = {676--696},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {How middle managers manage the political environment to achieve market goals: Insights from China's state-owned enterprises},
	Url = {http://dx.doi.org/10.1002/smj.2515},
