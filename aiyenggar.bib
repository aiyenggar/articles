	Keywords = {capabilities, game theory, repositioning costs, strategy dynamics, strategic interaction},
	Number = {10},
	Pages = {1953--1963},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Elevating Repositioning Costs: Strategy Dynamics and Competitive Interactions},
	Url = {http://dx.doi.org/10.1002/smj.2635},
