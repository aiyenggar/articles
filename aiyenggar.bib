	Keywords = {equity ties, turbulence, network centralization, business group, affiliate performance},
	Number = {5},
	Pages = {1082--1100},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Centralization of intragroup equity ties and performance of business group affiliates},
	Url = {http://dx.doi.org/10.1002/smj.2542},
