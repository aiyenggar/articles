	Keywords = {local search, intra-organizational network, organizational knowledge, local search dimensions, knowledge network},
	Number = {3},
	Pages = {657--675},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Organizational knowledge networks and local search: The role of intra-organizational inventor networks},
	Url = {http://dx.doi.org/10.1002/smj.2516},
	Volume = {38},
	Year = {2017},
