	Issn = {1097-0266},
	Journal = {Strategic Management Journal},
	Keywords = {deliberate capability development, motivational microfoundations, social interactions, business process performance, multilevel},
	Number = {9},
	Pages = {1755--1773},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Heterogeneous social motives and interactions: The three predictable paths of capability development},
	Url = {http://dx.doi.org/10.1002/smj.2605},
