	Journal = {Strategic Management Journal},
	Keywords = {political hazards (risks), geographic concentration, state incentives, political capital, China},
	Number = {2},
	Pages = {203--231},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Political hazards and firms' geographic concentration},
	Url = {http://dx.doi.org/10.1002/smj.2474},
	Volume = {38},
