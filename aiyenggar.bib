	Keywords = {cross-border acquisition, state-owned firms, legitimacy concerns, theorization, institutional theory},
	Number = {9},
	Pages = {1915--1934},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Cross-border acquisitions by state-owned firms: How do legitimacy concerns affect the completion and duration of their acquisitions?},
	Url = {http://dx.doi.org/10.1002/smj.2609},
