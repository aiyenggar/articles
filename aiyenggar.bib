	Doi = {10.1287/orsc.2017.1165},
	Eprint = {https://doi.org/10.1287/orsc.2017.1165},
	Journal = {Organization Science},
	Number = {1},
	Pages = {80-99},
	Title = {Networks and Innovation: Accounting for Structural and Institutional Sources of Recombination in Brokerage Triads},
	Url = {https://doi.org/10.1287/orsc.2017.1165},
	Volume = {29},
	Year = {2018},
	Bdsk-Url-1 = {https://doi.org/10.1287/orsc.2017.1165}}

