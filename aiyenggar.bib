	Keywords = {employee mobility, spin-outs, knowledge spill-ins, new ventures, knowledge misappropriation},
	Number = {8},
	Pages = {1626--1645},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Employee mobility, spin-outs, and knowledge spill-in: How incumbent firms can learn from new ventures},
	Url = {http://dx.doi.org/10.1002/smj.2625},
