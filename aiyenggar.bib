	Keywords = {dominant design, exit mode, industry evolution, pre-entry capabilities, shakeout, technology competition},
	Number = {1},
	Pages = {33--61},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Capabilities, technologies, and firm exit during industry shakeout: Evidence from the global solar photovoltaic industry},
	Url = {http://dx.doi.org/10.1002/smj.2709},
	Volume = {39},
	Year = {2018},
