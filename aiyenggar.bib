	Keywords = {access to resources, entrepreneurial capabilities, entrepreneurship programs, entrepreneurship training, program evaluation},
	Number = {1},
	Pages = {85--112},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Who does (not) benefit from entrepreneurship programs?},
	Url = {http://dx.doi.org/10.1002/smj.2704},
