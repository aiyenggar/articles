	Author = {Jay B. Barney},
	Date-Added = {2017-04-14 09:45:58 +0000},
	Date-Modified = {2017-04-25 10:22:04 +0000},
	Issn = {00251909, 15265501},
	Journal = {Management Science},
	Number = {10},
