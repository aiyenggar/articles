	Number = {7},
	Pages = {1373--1390},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {How entrepreneurs leverage institutional intermediaries in emerging economies to acquire public resources},
	Url = {http://dx.doi.org/10.1002/smj.2575},
