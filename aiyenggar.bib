	Keywords = {industrial disasters, philanthropic capability, safety management capability, technological capability},
	Number = {2},
	Pages = {502--526},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {MNC foreign investment and industrial disasters: The moderating role of technological, safety management, and philanthropic capabilities},
	Url = {http://dx.doi.org/10.1002/smj.2737},
	Volume = {39},
	Year = {2018},
