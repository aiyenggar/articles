	Keywords = {foreign exit, vulnerability, real options, resilience, political risk},
	Number = {7},
	Pages = {1478--1498},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Caught in the crossfire: Dimensions of vulnerability and foreign multinationals' exit from war-afflicted countries},
	Url = {http://dx.doi.org/10.1002/smj.2599},
