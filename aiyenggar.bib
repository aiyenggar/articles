	Journal = {Global Strategy Journal},
	Keywords = {organizational knowledge creation theory, dynamic capabilities, middle-up-down management, wise leadership, phronesis, multinational enterprise},
	Number = {3},
	Pages = {168--182},
	Title = {`Meso'-Foundations of Dynamic Capabilities: Team-Level Synthesis and Distributed Leadership as the Source of Dynamic Creativity},
