	Keywords = {competitive dynamics, time delays, performance heterogeneity, behavioral strategy, reinforcement learning},
	Number = {3},
	Pages = {506--525},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Time delays, competitive interdependence, and firm performance},
	Url = {http://dx.doi.org/10.1002/smj.2512},
	Volume = {38},
