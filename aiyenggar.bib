	Keywords = {complexity, epistemology, ontology, praxeology, management, metatheory},
	Number = {2},
	Pages = {132--153},
	Title = {Don't Simplify, Complexify: From Disjunctive to Conjunctive Theorizing in Organization and Management Studies},
