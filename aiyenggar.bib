	Keywords = {overconfidence, founder CEOs, professional CEOs, corporate governance},
	Number = {3},
	Pages = {751--769},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Are founder CEOs more overconfident than professional CEOs? Evidence from S&P 1500 companies},
	Url = {http://dx.doi.org/10.1002/smj.2519},
