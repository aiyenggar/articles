@article{Piketty2015,
	Abstract = {When a lengthy book is widely discussed in academic circles and the popular media, it is probably inevitable that the arguments of the book will be simplified in the telling and retelling. In the case of my book Capital in the Twenty-First Century (2014), a common simplification
