	Publisher = {Academy of Management},
	Title = {A Look Back and a Leap Forward: A Review and Synthesis of the Individual Work Performance Literature},
	Url = {http://annals.aom.org/content/11/2/825},
	Volume = {11},
	Year = {2017},
	Bdsk-Url-1 = {http://annals.aom.org/content/11/2/825},
