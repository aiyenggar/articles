	Keywords = {corporate governance, boards of directors, CEOs, agency theory, board independence},
	Number = {13},
	Pages = {2623--2646},
	Publisher = {John Wiley & Sons, Ltd},
	Title = {Home Alone: The Effects of Lone-Insider Boards on CEO Pay, Financial Misconduct, and Firm Performance},
